@model MEC.ControleRDO.Data.VO.ObraVO

<h2>Edit Obra</h2>

<form asp-action="EditObraConfirmed" method="post">
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="NumeroOrcamento" class="control-label"></label>
        <input asp-for="NumeroOrcamento" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SE" class="control-label"></label>
        <input asp-for="SE" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FiscalId" class="control-label"></label>
        <select asp-for="FiscalId" asp-items="@(new SelectList(Model.ListaDeFiscais, "Id", "Nome"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
</form>

<form>
    <a asp-action="IndexObra">Back to List</a>
</form>
