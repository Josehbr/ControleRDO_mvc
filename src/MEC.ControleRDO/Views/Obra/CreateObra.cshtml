@model Data.VO.ObraVO

<head>
    <link rel="stylesheet" href="~/css/Obra/edit.css">
</head>

<h2>Adicionar</h2>

<form asp-action="CreateObraConfirmed" method="post">
    <div class="form-group">
        <label asp-for="NumeroOrcamento"></label>
        <input asp-for="NumeroOrcamento" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="SE"></label>
        <input asp-for="SE" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="FiscalId" class="control-label"></label>
        <select asp-for="FiscalId" class="form-control" required>
            <option value="">Selecione um Fiscal</option>
            @foreach (var fiscal in Model.ListaDeFiscais)
            {
               <option value="@fiscal.Id">@fiscal.Nome</option>
            }
        </select>
    </div>

    <br />

    <div class="form-group">
        <input type="submit" value="Criar" class="btn btn-primary" />
        <a asp-action="IndexObra">Voltar</a>
    </div>
</form>